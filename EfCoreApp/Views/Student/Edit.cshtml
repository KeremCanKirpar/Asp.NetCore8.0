@model Student
@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align: center;"><b>Öğrenci Bilgileri Güncelle</b></h1>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Student" asp-action="Edit" method="post">
            <input type="hidden" asp-for="StudentId" />
        <div class="mb-3">
            <label asp-for="StudentName"></label>
            <input asp-for="StudentName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="StudentSurname"></label>
            <input asp-for="StudentSurname" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <button type="submit" class="btn btn-secondary"> Öğrenci Bilgieri Güncelle</button>
        </form>
    </div>
    <div class="col-4">
       <h4>Kurslar</h4>
       <hr>
       <ul>
        @foreach (var item in Model.RegisterCourses)
        {
            <li>
                @item.Course.CourseName
                
            </li>
        }
       </ul>
    </div>
