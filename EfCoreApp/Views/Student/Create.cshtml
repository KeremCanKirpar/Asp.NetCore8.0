@model Student
@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align: center;"><b>Öğrenci Ekle</b></h1>
<hr>
<form asp-controller="Student" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="StudentSurname"></label>
        <input asp-for="StudentSurname" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <button type="submit" class="btn btn-secondary"> Öğrenci Ekle</button>
</form>
