@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Index";
}
<h1 style="text-align: center;"><b>Öğretmen Listesi</b></h1>
<a asp-action="Create" asp-controller="Teacher" class="btn btn-primary">Öğretmen Ekle</a>
<hr>

<table class="table table-bordered">
    <thead>
        <th style="width: 150px;">@Html.DisplayNameFor(m => m.TeacherId)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Surname)</th>
        <th style="width: 150px;"></th>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@Html.DisplayFor(item => student.TeacherId)</td>
                <td>@Html.DisplayFor(item => student.Name)</td>
                <td>@Html.DisplayFor(item => student.Surname)</td>
                <td>
                    <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@student.TeacherId"
                        class="btn btn-primary">Edit</a> |
                    <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@student.TeacherId"
                        class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>