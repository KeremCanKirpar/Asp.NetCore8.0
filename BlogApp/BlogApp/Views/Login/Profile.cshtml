@model User
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
            <img src="/img/@Model.ImageUrl" class="img-fluid">
        </div>
    </div>
    <div class="col-md-10">
        <div class="bg-white p-4">
            <h5>@Model.Name</h5>
            <hr>
            <div id="posts">
                <h5 class="my-4">Yayınlanan gönderiler</h5>
                <ul class="list-group">
                    @foreach (var post in Model.Posts)
                    {
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i><a
                                href="/post/details/@post.Url">@post.Title</a></li>
                    }
                </ul>
            </div>
            <div id="comments">
                <h5 class="my-4">Yorumlar</h5>
                @foreach (var comment in Model.Comments)
                {
                    <li class="list-group-item"><i class="bi bi-chat-text-fill"></i> @comment.Text <i><u>[@comment.Post.Title]</u></i> </li>

                }
            </div>
        </div>
    </div>
</div>