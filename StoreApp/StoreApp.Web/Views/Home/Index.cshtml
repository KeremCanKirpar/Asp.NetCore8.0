@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        <vc:categories-list />
    </div>
    <div class="col-md-9">
        @if (Model.Products.Count() == 0)
        {
            <p> Ürün Bulunamadı</p>
        }

        @foreach (var p in Model.Products)
        {
            <div class="card card-outline-secondary mb-2 p-2">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@p.ProductName</h4>
                        <p>@p.Description</p>
                    </div>
                    <div>
                        <span class="badge rounded-pill text-bg-success">@p.Price ₺</span>
                    </div>
                </div>
                <form asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="@p.Id" name="Id">
                    <button type="submit" class="btn btn-outline-success btn-sm pull-right" style="float: right;">Sepete Ekle</button>
                </form>
            </div>
        }


        @if (Model.PageInfos.TotalPages > 1)
        {
            <div page-model="@Model.PageInfos" page-action="Index" page-class="btn" page-class-link="btn-outline-dark"
                page-class-active="btn-dark" class="btn-group m-1"></div>
        }


    </div>
</div>
