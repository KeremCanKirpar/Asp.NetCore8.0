@model OrderModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form method="post" asp-action="Checkout">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input asp-for="@Model.Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.City" class="form-label"></label>
                    <input asp-for=" @Model.City" class="form-control">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="@Model.Phone" class="form-label"></label>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.AddressLine" class="form-label"></label>
                    <textarea asp-for="@Model.AddressLine" class="form-control"></textarea>
                    <span asp-validation-for="AddressLine" class="text-danger"></span>
                </div>
            </div>

            <h4 class="my-3">Ödeme Bilgileri</h4>
            <div class="col">
                <label asp-for="@Model.CardName" class="form-label"></label>
                <input asp-for=" @Model.CardName" class="form-control">
            </div>
            <div class="col">
                <label asp-for="@Model.Cardnumber" class="form-label"></label>
                <input asp-for="@Model.Cardnumber" class="form-control">
            </div>
            <div class="col">
                <label asp-for="@Model.ExpirationMonth" class="form-label"></label>
                <input asp-for=" @Model.ExpirationMonth" class="form-control">
            </div>
            <div class="col">
                <label asp-for="@Model.ExpirationYear" class="form-label"></label>
                <input asp-for="@Model.ExpirationYear" class="form-control">
            </div>
            <div class="col">
                <label asp-for="@Model.Cvc" class="form-label"></label>
                <input asp-for="@Model.Cvc" class="form-control">

            </div>





            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">Sipariş Özeti</h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Cart.Items)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Product.ProductName x @item.Quantity</h6>
                    </div>
                    <span>@item.Product.Price.ToString("c")</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam: </span>
                <strong>@Model.Cart.CalculateTotal().ToString("c")</strong>
            </li>
        </ul>
    </div>
</div>