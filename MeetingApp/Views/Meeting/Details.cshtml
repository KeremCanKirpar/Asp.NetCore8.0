@model UserInfo
@{
    ViewBag.Title = "Kullanıcı  Detayı";
}
@{
    var className = @Model.WillAttend == true ? "primary" : "danger";
}
<main class="text-center">
    <h1 class="h4">Başvuru Detayı</h1>
    <p>
        <span class="badge text-bg-@className">
            @if (Model.WillAttend == true)
            {
                <span>Katılıyor</span>
            }
            else
            {
                <span>Katılmıyor</span>
            }
        </span>
    </p>
    <p>İsim: @Model.Name</p>
    <p>Eposta: @Model.Email</p>
    <p>Telefon: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn-outline-@className">Katılımcı Listesine Dön</a>
</main>