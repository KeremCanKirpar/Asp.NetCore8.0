@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Users" asp-action="CreateUser" class="btn btn-primary mb-3">Kullanıcı Oluştur</a>
<table class="table navbar-toggleable-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>FullName</th>
            <th>Email</th>
            <th style="125px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Güncelle</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')">
                        <input type="hidden" value="@item.Id" name="id" 
                            style="display: inline-block;">
                    <button type="submit"  class="btn btn-danger btn-sm">Sil</button>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>