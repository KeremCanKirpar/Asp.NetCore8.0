@page "/{id}"

@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post">
        <input type="hidden" asp-for="Employee.Id">
    <div class="row mb-3">
        <label asp-for="Employee.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Name" class="form-control" >
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Employee.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Email" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Employee.Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Photo" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Employee.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Department" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-secondary">Update</button>
    <a asp-page="/Employees/Index" class="btn btn-danger">Cancel</a>
</form>
